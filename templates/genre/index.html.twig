{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <a class="float-end btn btn-outline-success" href="{{ path('genre_new') }}"><span class="oi oi-plus"></span></a>

    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>
                    <a href="{{ path('genre_show', {'id': genre.id}) }}">{{ genre.name }}</a>
                    </td>
                <td>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">
                        <span class="oi oi-pencil link-warning" title="Edit"></span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
